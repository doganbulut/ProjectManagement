@model DataLayer.tblDeveloper

@{
    ViewBag.Title = "Create";
    Layout = "~/Content/education_zone/_Layout.cshtml";
}

<h2>Yeni Kayıt</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Kullanıcılar</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AD)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AD)
            @Html.ValidationMessageFor(model => model.AD)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UNIT_ID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.UNIT_ID, (SelectList)ViewBag.Units);
            @Html.ValidationMessageFor(model => model.UNIT_ID)
        </div>

        <p>
            <input type="submit" value="KAYDET" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
