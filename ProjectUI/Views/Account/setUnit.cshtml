@model ProjectUI.ViewModels.Account

@{
    ViewBag.Title = "setUnit";
    Layout = "~/Content/education_zone/_Layout.cshtml";
}

<h2>Kullanıcı Hesabı</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Kullanıcı</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        

        <div class="editor-label">
            @Html.LabelFor(model => model.UnitId)
        </div>
        

        <div class="editor-field">
            @Html.DropDownListFor(model => model.UnitId, (SelectList)ViewBag.Units)
            @Html.ValidationMessageFor(model => model.UnitId)
        </div>

        <p>
            <input type="submit" value="Kaydet" />
        </p>
    </fieldset>
}

